<style type='text/css'>
  th {
    font-weight: bold;
    border-left: 1px solid black;
  }
  body {
    font-family: Helvetica, Arial, sans-serif;
  }
  tr, td {
    border: solid 1px black;
    padding: 2px;
  }
  .cell.edit,
  .cell.quantity,
  .cell.value {
    text-align: right;
  }
  .cell.preview {
    text-align: center;
  }

  table, tr, td, th, tbody, thead, tfoot {
      page-break-inside: avoid;
  }
  .report-footer {
    padding-top: 30px;
  }

  .report-break {
    page-break-after: always;
  }

  .report-break:last-of-type {
    page-break-after: auto;
  }

</style>
<%= render 'body_css' %>
